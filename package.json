{
  "name": "credit-cloud",
  "private": true,
  "description": "Apollo server for credit cloud",
  "version": "0.0.0",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/shottah/credit-cloud-server"
  },
  "homepage": "https://github.com/shottah/credit-cloud-server#readme",
  "bugs": {
    "url": "https://github.com/shottah/credit-cloud-server/issues"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "engines": {
    "node": ">=18.0"
  },
  "scripts": {
    "build": "npm run codegen && tsc",
    "codegen": "graphql-codegen",
    "start": "node dist/index.js",
    "dev": "nodemon --watch \"src/**\" --ext \"ts,json,graphql\" --exec \"npm run build && npm run start\" --ignore ./src/__generated__/ --ignore ./src/datasources/BarAPI.ts",
    "test": "jest"
  },
  "dependencies": {
    "@apollo/server": "^4.3.3",
    "@apollo/subgraph": "^2.6.3",
    "cybersource-rest-client": "^0.0.52",
    "graphql": "latest",
    "graphql-tag": "latest",
    "jwk-to-pem": "^2.0.5"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^5.0.0",
    "@graphql-codegen/typescript": "^4.0.0",
    "@graphql-codegen/typescript-resolvers": "^4.0.0",
    "@types/jest": "^29.0.3",
    "@types/node": "^20.0.0",
    "jest": "^29.0.3",
    "nodemon": "^3.0.0",
    "ts-jest": "^29.0.2",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.0"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "roots": [
      "src"
    ],
    "globals": {
      "ts-jest": {
        "testRegext": "/__tests__/.*.test.ts",
        "verbose": true
      }
    }
  }
}
